<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/wireRopeFragment"
        android:name="com.example.etico.ui.wire_rope.WireRopeFragment"
        android:label="fragment_wire_rope"
        tools:layout="@layout/fragment_wire_rope" >
        <action
            android:id="@+id/action_wireRopeFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:popUpTo="@id/wireRopeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/sLingFragment"
        android:name="com.example.etico.ui.sling.SLingFragment"
        android:label="fragment_s_ling"
        tools:layout="@layout/fragment_sling" />
    <fragment
        android:id="@+id/shackleHookFragment"
        android:name="com.example.etico.ui.shackle_hook.ShackleHookFragment"
        android:label="fragment_shackle_hook"
        tools:layout="@layout/fragment_shackle_hook" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.etico.ui.signup.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" />
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.etico.ui.view_pager_fragment.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_wireRopeFragment"
            app:destination="@id/wireRopeFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.etico.ui.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />
</navigation>