        android:name="com.example.etico.ui.shackle_hook.ShackleHookFragment"
        android:label="fragment_shackle_hook"
        tools:layout="@layout/fragment_shackle_hook" />
    <navigation android:id="@+id/navigation"
        app:startDestination="@id/portMaritimeFragment">
        <fragment
            android:id="@+id/industrialFragment"
            android:name="com.example.etico.ui.industrial.IndustrialFragment"
            android:label="Title: {Industrial Cranes}"
            tools:layout="@layout/fragment_industrial" />
        <fragment
            android:id="@+id/constructionFragment"
            android:name="com.example.etico.ui.construction.ConstructionFragment"
            android:label="Title: {Construction Cranes}"
            tools:layout="@layout/fragment_construction" />
        <fragment
            android:id="@+id/portMaritimeFragment"
            android:name="com.example.etico.ui.port_maritime.PortMaritimeFragment"
            android:label="Title: {Maritime}"
